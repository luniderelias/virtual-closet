<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thinkapps.com.virtualcloset.View.Home.MainActivity">

    <Button
        android:id="@+id/buttonAvailablePieces"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/available_pieces"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/button_margin_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonMyLooks" />

    <Button
        android:id="@+id/buttonMyLooks"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/my_looks"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/buttonCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/camera"
        android:background="@drawable/round_background"
        android:layout_marginTop="@dimen/button_margin_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMyLooks" />

    <FrameLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
